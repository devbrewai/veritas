# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/veritas

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# OCR - Tesseract (optional - use system default if not set)
# TESSERACT_CMD=/usr/local/bin/tesseract

# OCR - Google Vision API (optional fallback for better accuracy)
# Get API key from: https://console.cloud.google.com/apis/credentials
# Enable Cloud Vision API: https://console.cloud.google.com/apis/library/vision.googleapis.com
GOOGLE_VISION_ENABLED=false
# GOOGLE_CLOUD_API_KEY=your-api-key-here

# API
API_V1_PREFIX=/v1
DEBUG=false
