# Veritas Web - Environment Variables
# Copy this file to .env.local and fill in the values

# Database (required - shared with API)
# For local development with Docker:
DATABASE_URL=postgres://postgres:postgres@localhost:5432/veritas
# For Neon (production):
# DATABASE_URL=postgres://user:password@host.neon.tech/veritas?sslmode=require

# Better Auth (required)
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-secret-key-must-be-at-least-32-characters-long

# API URL (optional - for frontend API calls)
NEXT_PUBLIC_API_URL=http://localhost:8000
